{
  "common": {
    "name": "marstek",
    "version": "0.0.1",
    "titleLang": {
      "en": "Marstek Venus (Open API)",
      "de": "Marstek Venus (Open API)"
    },
    "desc": {
      "en": "Connects Marstek Venus devices via UDP JSON-RPC Open API.",
      "de": "Connects Marstek Venus devices via UDP JSON-RPC Open API."
    },
    "type": "energy",
    "tier": 3,
    "authors": [
      "has-sTeaLth"
    ],
    "licenseInformation": {
      "license": "MIT",
      "type": "free"
    },
    "platform": "Javascript/Node.js",
    "mode": "daemon",
    "icon": "marstek.png",
    "extIcon": "https://raw.githubusercontent.com/has-sTeaLth/iobroker.marstek/main/admin/marstek.png",
    "enabled": true,
    "readme": "README.md",
    "loglevel": "info",
    "compact": true,
    "connectionType": "local",
    "dataSource": "poll",
    "keywords": [
      "marstek",
      "venus",
      "energy",
      "battery",
      "udp",
      "json-rpc"
    ],
    "dependencies": [
      {
        "js-controller": ">=6.0.11"
      }
    ],
    "globalDependencies": [
      {
        "admin": ">=7.6.17"
      }
    ],
    "news": {
      "0.0.1": {
        "en": "Initial release.",
        "de": "Initiale Version."
      }
    },
    "adminUI": {
      "config": "json",
      "jsonConfig": {
        "i18n": true,
        "type": "panel",
        "items": {
          "connection": {
            "type": "panel",
            "label": "Connection",
            "items": {
              "ip": {
                "type": "text",
                "label": "Device IP",
                "placeholder": "192.168.1.10",
                "sm": 12,
                "md": 6
              },
              "port": {
                "type": "number",
                "label": "UDP Port",
                "min": 1,
                "max": 65535,
                "default": 30000,
                "sm": 12,
                "md": 3
              },
              "modelGroup": {
                "type": "select",
                "label": "Model group",
                "default": "auto",
                "options": [
                  {
                    "label": "Auto",
                    "value": "auto"
                  },
                  {
                    "label": "Venus C / E",
                    "value": "ce"
                  },
                  {
                    "label": "Venus D",
                    "value": "d"
                  }
                ],
                "sm": 12,
                "md": 3
              }
            }
          },
          "polling": {
            "type": "panel",
            "label": "Polling",
            "items": {
              "pollIntervalSec": {
                "type": "number",
                "label": "Poll interval (sec)",
                "min": 5,
                "max": 3600,
                "default": 30,
                "sm": 12,
                "md": 4
              },
              "timeoutMs": {
                "type": "number",
                "label": "UDP timeout (ms)",
                "min": 1000,
                "max": 30000,
                "default": 8000,
                "sm": 12,
                "md": 4
              },
              "interCallDelayMs": {
                "type": "number",
                "label": "Inter-call delay (ms)",
                "min": 0,
                "max": 1000,
                "default": 200,
                "sm": 12,
                "md": 4
              }
            }
          }
        }
      }
    }
  },
  "native": {
    "ip": "",
    "port": 30000,
    "modelGroup": "auto",
    "pollIntervalSec": 30,
    "timeoutMs": 8000,
    "interCallDelayMs": 200
  },
  "objects": [],
  "instanceObjects": []
}
